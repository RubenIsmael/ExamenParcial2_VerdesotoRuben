@model Examen_parcia2.Models.Objetivo

@{
    ViewData["Title"] = "Crear Objetivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contenedor fluido con diseño moderno -->
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Tarjeta con sombra y diseño elegante -->
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <!-- Encabezado con fondo degradado -->
                <div class="card-header bg-primary text-white text-center"
                     style="background: linear-gradient(to right, #4a90e2, #50c878);">
                    <h1 class="my-2">Registrar Nuevo Objetivo</h1>
                </div>

                <!-- Cuerpo de la tarjeta -->
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label text-primary">
                                <i class="fas fa-pencil-alt me-2"></i>Descripción
                            </label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CampañaId" class="form-label text-primary">
                                <i class="fas fa-bullhorn me-2"></i>Campaña
                            </label>
                            <select asp-for="CampañaId" class="form-control" asp-items="ViewBag.CampañaId"></select>
                        </div>

                        <!-- Botones con estilos modernos -->
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-modern btn-crear me-2">
                                <i class="fas fa-save me-2"></i>Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-modern btn-detalles">
                                <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
